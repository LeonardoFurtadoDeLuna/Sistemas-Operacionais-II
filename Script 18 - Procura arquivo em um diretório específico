#!/bin/bash
procura_arq()
{
	printf "Arquivo: "
	read arq
	printf "Diret처rio atual: "
	dir=echo pwd
	printf "Path de busca: "
	read dirb
	echo ""
	if [ -e "$dirb/$arq" ]
	then
		printf "O arquivo $arq existe no diret처rio $dirb"
	else
		printf "O arquivo $arq n찾o existe no diret처rio $dirb"
	fi
}
clear
